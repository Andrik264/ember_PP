<div>
  <ul class="user__posts">
  {{#each @posts as |post|}}
    <li>
      <div class="card">
        <h3 class="card-header">
          {{this.info}}
          {{@username}}
        </h3>
        <div class="card-body">
          <h5 class="card-title">
            {{post.title}}
          </h5>
          <p class="card-text">
            {{post.body}}
          </p>
        <!-- Button trigger modal -->
        <button
          type="button"
          class="btn btn-primary"
          data-toggle="modal"
          data-target="#ModalPostDelete{{post.id}}"
        >
          Delete
        </button>

        <!-- Modal -->
        <div class="modal fade" id="ModalPostDelete{{post.id}}" tabindex="-1" role="dialog" aria-labelledby="ModalPostLabel" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="ModalPostLabel">
                  {{post.title}}
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                {{post.body}}
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button
                  type="button"
                  class="btn btn-danger"
                  {{on "click" (fn @deletePost post.id)}}
                  data-dismiss="modal"
                >
                  Confirm
                </button>
              </div>
            </div>
          </div>
        </div>

          <!-- Button trigger modal -->
          <button
            type="button"
            class="btn btn-secondary"
            data-toggle="modal" 
            data-target="#exampleModal"
            {{on "click" (fn this.selectPost post.id)}}
          >
            Edit
          </button>

          <!-- Modal -->
          <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>

                <div class="modal-body">
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <label class="input-group-text" for="postTitle-{{post.id}}">Title</label>
                    </div>
                    <Input
                      type="text"
                      class="form-control"
                      @value={{this.title}}
                      id="postTitle-{{post.id}}"
                    />
                  </div>

                  <div class="input-group">
                    <div class="input-group-prepend">
                      <label class="input-group-text" for="postBody-{{post.id}}">Body</label>
                    </div>
                    <textarea
                      type="text"
                      class="form-control"
                      value={{this.body}}
                      id="postBody-{{post.id}}"
                    />
                  </div>
                </div>

                <div class="modal-footer">
                  <button
                    type="button"
                    class="btn btn-secondary" 
                    data-dismiss="modal"
                  >
                    Close
                  </button>

                  <button
                    type="button"
                    class="btn btn-primary"
                    data-dismiss="modal"
                    {{on "click" this.saveChanges}}
                  >
                    Save changes
                  </button>
                </div>
              </div>
            </div>
          </div>
          
        </div>
        <div class="card-footer text-muted">
          2 days ago
        </div>
      </div>
    </li>
  {{/each}}
</ul>


</div>
